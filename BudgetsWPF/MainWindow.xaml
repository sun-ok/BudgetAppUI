<Window x:Class="BudgetsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetsWPF"
        xmlns:wpf="clr-namespace:AV.ProgrammingWithCSharp.Budgets.GUI.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800" MinWidth="600" FontSize="18">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="100"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Header-->
        <wpf:Header></wpf:Header>

        <!--Main Control-->
        <local:MainView Grid.Row="1"></local:MainView>
    </Grid>
</Window>
